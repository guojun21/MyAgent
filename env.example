# LLM配置 - 选择一个即可
LLM_PROVIDER=openai  # 可选: openai, zhipuai

# OpenAI配置
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4  # 或 gpt-3.5-turbo

# 智谱AI配置
ZHIPUAI_API_KEY=your_zhipuai_api_key_here
ZHIPUAI_MODEL=glm-4  # 或 glm-3-turbo

# 服务配置
HOST=0.0.0.0
PORT=8000
DEBUG=true

# 安全配置
MAX_OUTPUT_LINES=100
COMMAND_TIMEOUT=30



